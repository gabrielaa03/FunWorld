<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gabrielaangebrandt.funworld">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".models.database.DatabaseConfig"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="FunWorld"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity.view.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity.view.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".register_activity.view.RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LauncherActivity.view.Login" />
        <activity
            android:name=".ForgottenPassword.view.ForgottenPassword"
            android:label="@string/app_name"
            android:parentActivityName=".register_activity.view.RegisterActivity" />
        <activity
            android:name=".OneCoutryViewActivity.view.CountryDetails"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity.view.MainActivity" />
        <activity
            android:name=".memory_activity.view.MemoryActivity"
            android:parentActivityName=".MainActivity.view.MainActivity"/>
        <activity
            android:name=".tilt_activity.view.TiltActivity"
            android:screenOrientation="landscape"
            android:parentActivityName=".MainActivity.view.MainActivity" />

        <activity
            android:name=".picado_activity.view.PicadoActivity"
            android:screenOrientation="landscape"
            android:parentActivityName=".MainActivity.view.MainActivity">

        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD2rgN3gm5RRgXDLkovc3uGpsLo2JGDSzI"/>
    </application>

</manifest>