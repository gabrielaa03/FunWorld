<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gabrielaangebrandt.funworld">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".database.DatabaseConfig"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="FunWorld"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity.view.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity.view.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LauncherActivity.view.Login" />
        <activity
            android:name=".register_activity.view.RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LauncherActivity.view.Login" />
        <activity
            android:name=".ForgottenPassword.view.ForgottenPassword"
            android:label="@string/app_name"
            android:parentActivityName=".register_activity.view.RegisterActivity" />
        <activity android:name=".OneCoutryViewActivity.view.CountryDetails"></activity>
        <activity android:name=".memory_activity.view.MemoryActivity"></activity>

        <activity android:name=".tilt_activity.view.TiltActivity"></activity>

    </application>

</manifest>