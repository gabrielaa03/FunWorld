<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabrielaangebrandt.funworld.register_activity.view.RegisterActivity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/hint_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:textSize="20sp"

        />

  <!--  KORISNIÄŒKO IME-->

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:text="@string/username"
        android:padding="8dp"
        android:layout_below="@+id/tv_name"
        android:textSize="20sp"
        />


    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/tv_username"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:hint="@string/egUsername"/>


    <!--LOZINKA-->


    <TextView
        android:id="@+id/tv_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="@string/password"
        android:textSize="20sp"

        />
    <EditText
        android:id="@+id/et_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_username"
        android:layout_toEndOf="@+id/tv_password1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:inputType="textPassword"
        android:textSize="20sp"/>

   <!-- PONOVI LOZINKU-->

    <TextView
        android:id="@+id/tv_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password1"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/repeatPassword"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_password1"
        android:layout_toEndOf="@+id/tv_password2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:padding="8dp"
        android:inputType="textPassword"/>

    <!--EMAIL-->

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="@string/email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_password2"
        android:layout_toEndOf="@+id/tv_email"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_email"/>

  <!--  SIGURNOSNO PITANJE-->

    <TextView
        android:id="@+id/tv_choose_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:text="@string/chooseQuestion"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner_choose_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:layout_below="@+id/tv_choose_question" />

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_choose_question"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:hint="@string/example_answer"/>

    <!--GUMB ZA REGISTRACIJU-->

    <Button
        android:id="@+id/btn_register_player"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/et_answer"
        android:padding="8dp"
        android:layout_marginTop="25dp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@color/colorPrimaryDark"/>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
