<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_counryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ime zemlje"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/iv_leftFlag"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_counryName"
        tools:background="@drawable/al"/>

    <ImageView
        android:id="@+id/iv_rightFlag"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_counryName"
        tools:background="@drawable/hr"
        android:layout_toEndOf="@+id/iv_leftFlag" />
</RelativeLayout>
